name: Deploy to Azure Static Web Apps

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build_and_deploy:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      id-token: write
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Build (static site)
        run: |
          echo "Nothing to build; copying files to dist/"
          mkdir -p dist
          rsync -av \
            --exclude='.git' \
            --exclude='dist' \
            --exclude='node_modules' \
            --exclude='.github' \
            --exclude='server.out.log' \
            --exclude='server.err.log' \
            ./ dist/

      - name: Deploy to Azure Static Web Apps
        uses: Azure/static-web-apps-deploy@v1
        with:
          azure_static_web_apps_api_token: ${{ secrets.AZURE_STATIC_WEB_APPS_API_TOKEN }}
          action: "upload"
          app_location: "dist"
          api_location: "api"
          output_location: ""
